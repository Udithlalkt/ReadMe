<dependencies>
    <!-- Jakarta XML Web Services API (replaces old javax.xml) -->
    <dependency>
        <groupId>jakarta.xml.ws</groupId>
        <artifactId>jakarta.xml.ws-api</artifactId>
        <version>4.0.0</version>
    </dependency>
</dependencies>


<build>
    <plugins>
        <plugin>
            <groupId>com.sun.xml.ws</groupId>
            <artifactId>jaxws-maven-plugin</artifactId>
            <version>4.0.1</version>
            <executions>
                <execution>
                    <goals>
                        <goal>wsimport</goal>
                    </goals>
                    <configuration>
                        <!-- Path to WSDL (local file or URL) -->
                        <wsdlUrls>
                            <wsdlUrl>src/main/resources/wsdl/your-service.wsdl</wsdlUrl>
                        </wsdlUrls>
                        <!-- Package for generated classes -->
                        <packageName>com.example.generated</packageName>
                        <keep>true</keep>
                        <verbose>true</verbose>
                    </configuration>
                </execution>
            </executions>
        </plugin>
    </plugins>
</build>