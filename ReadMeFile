import org.springframework.boot.web.servlet.ServletRegistrationBean;
import org.springframework.context.ApplicationContext;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;
import org.springframework.ws.config.annotation.EnableWs;
import org.springframework.ws.transport.http.MessageDispatcherServlet;
import org.springframework.ws.wsdl.wsdl11.DefaultWsdl11Definition;
import org.springframework.xml.xsd.SimpleXsdSchema;

import javax.xml.transform.Source;
import org.springframework.core.io.ClassPathResource;

@EnableWs
@Configuration
public class WebServiceConfig {

    @Bean
    public ServletRegistrationBean<MessageDispatcherServlet> messageDispatcherServlet(ApplicationContext context) {
        MessageDispatcherServlet servlet = new MessageDispatcherServlet();
        servlet.setApplicationContext(context);
        servlet.setTransformWsdlLocations(true);
        return new ServletRegistrationBean<>(servlet, "/businessservice/*");
    }

    @Bean(name = "policyinquiry")
    public DefaultWsdl11Definition wsdlDefinition() {
        DefaultWsdl11Definition wsdl11Definition = new DefaultWsdl11Definition();
        wsdl11Definition.setPortTypeName("PolicyInquiryPort");
        wsdl11Definition.setLocationUri("/businessservice/policyinquiry");
        wsdl11Definition.setTargetNamespace("http://www.avivacanada.com/services/policyintegrationservice/policybatchrenewal/v1");
        
        // Reference the static WSDL file
        wsdl11Definition.setWsdl(loadWsdl());
        
        return wsdl11Definition;
    }

    @Bean
    public Source loadWsdl() {
        return new org.springframework.xml.transform.ResourceSource(
            new ClassPathResource("wsdl/POLICYINQUIRY.wsdl"));
    }
}




